<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dimen_200"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dimen_10"
        android:background="@mipmap/pop_menu_bg_new"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/balance"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="center"
                android:text="账户余额"
                android:textColor="@color/black_08090b"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="￥00.00"
                android:textColor="@color/blue_clear"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/color_cccc" />

        <RelativeLayout
            android:id="@+id/ry_recharge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/recharge"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="center"
                android:text="我要充值"
                android:textColor="@color/black_08090b"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/color_cccc" />

        <RelativeLayout
            android:id="@+id/ry_withdraw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/withdraw"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="center"
                android:text="我要提现"
                android:textColor="@color/black_08090b"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/color_cccc" />

        <RelativeLayout
            android:id="@+id/ry_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/records"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="center"
                android:text="下注记录"
                android:textColor="@color/black_08090b"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/color_cccc" />

        <RelativeLayout
            android:id="@+id/ry_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/data"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="center"
                android:text="个人中心"
                android:textColor="@color/black_08090b"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/color_cccc" />

        <RelativeLayout
            android:id="@+id/ry_game_rule"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/gamerule"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="center"
                android:text="游戏规则"
                android:textColor="@color/black_08090b"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/color_cccc" />

        <RelativeLayout
            android:id="@+id/ry_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/contact"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="center"
                android:text="联系我们"
                android:textColor="@color/black_08090b"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/color_cccc" />

        <RelativeLayout
            android:id="@+id/ry_sign_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/sign_out"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="center"
                android:text="退出"
                android:textColor="@color/black_08090b"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>