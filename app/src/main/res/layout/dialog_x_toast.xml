<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="@dimen/dimen_40"
    android:layout_marginStart="@dimen/dimen_40"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/shape_color_primary_top_corners_6dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="通知"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="2dp"
            android:padding="8dp"
            android:src="@mipmap/icon_close"
            android:visibility="gone"
            tools:ignore="ContentDescription"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_color_white_bottom_corners_6dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_result"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_success"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingEnd="@dimen/dimen_10"
            android:paddingStart="@dimen/dimen_10"
            android:text="下注成功"
            android:textColor="@color/gray_4c4c4c"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>