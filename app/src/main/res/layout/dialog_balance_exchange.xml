<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="@dimen/dimen_40"
    android:layout_marginStart="@dimen/dimen_40"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/shape_color_primary_top_corners_6dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/balance_exchange"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="2dp"
            android:padding="8dp"
            android:src="@mipmap/icon_close"
            tools:ignore="ContentDescription"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_color_white_bottom_corners_6dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll_lottery_2_ag"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <RadioButton
                android:id="@+id/radio_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:button="@drawable/selector_custom_radio"
                android:checked="true"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_color_light_gray_corners_5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/lottery_balance"
                android:textColor="@color/text_normal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_exchange_arrow"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_color_light_gray_corners_5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/ag_balance"
                android:textColor="@color/text_normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ag_2_lottery"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <RadioButton
                android:id="@+id/radio_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:button="@drawable/selector_custom_radio"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_color_light_gray_corners_5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/ag_balance"
                android:textColor="@color/text_normal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_exchange_arrow"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_color_light_gray_corners_5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/lottery_balance"
                android:textColor="@color/text_normal"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_exchange_amount"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_solid_white_stroke_gray_corners_5dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_rmb"
            android:hint="@string/input_exchange_amount"
            android:inputType="number"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/text_normal"
            android:textColorHint="@color/text_hint"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_color_2f64d4_corners_half_circle"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/shape_color_da524d_corners_half_circle"
                android:gravity="center"
                android:text="@string/reset"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>