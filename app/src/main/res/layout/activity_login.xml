<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:layout_alignParentTop="true"
        android:background="@color/deep_blue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_toLeftArrow"
            android:layout_width="@dimen/dimen_45"
            android:layout_height="@dimen/dimen_45"
            android:scaleType="center"
            android:src="@mipmap/icon_left_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/user_login"
            android:textColor="@color/diy_white"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_40"
        android:src="@mipmap/ali_login"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginRight="@dimen/dimen_25"
        android:layout_marginTop="@dimen/dimen_30"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/user"
                android:drawablePadding="@dimen/dimen_7"
                android:gravity="center"
                android:textColor="#192023"
                android:textSize="@dimen/sp_18" />

            <EditText
                android:id="@+id/edittext_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="用户账号"
                android:paddingLeft="@dimen/dimen_5"
                android:singleLine="true"
                android:textColorHint="#cfcfcf"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/lock"
                android:drawablePadding="@dimen/dimen_7"
                android:gravity="center"
                android:textSize="@dimen/sp_18" />

            <EditText
                android:id="@+id/edittext_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@null"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="登陆密码"
                android:inputType="textPassword"
                android:minEms="10"
                android:paddingLeft="@dimen/dimen_5"
                android:singleLine="true"
                android:textColorHint="#cfcfcf"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/img_show_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:scaleType="center"
                android:src="@mipmap/no_see_pwd" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/yz_lock"
                android:drawablePadding="@dimen/dimen_7"
                android:gravity="center"
                android:textColor="#192023"
                android:textSize="@dimen/sp_18" />

            <EditText
                android:id="@+id/edittext_yzm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:digits="1234567890"
                android:hint="验证码"
                android:inputType="phone|number"
                android:maxLength="5"
                android:paddingLeft="@dimen/dimen_5"
                android:textColorHint="#cccccc"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/iv_showCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_5"
                android:layout_weight="2" />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="#cccccc" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_25"
            android:background="@null"
            android:button="@drawable/check_state"
            android:text="  记住密码"
            android:textColor="@color/deep_blue"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/bt_shi_wan"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15"
            android:background="@null"
            android:text="免费试玩"
            android:textColor="@color/deep_blue"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>


    <TextView
        android:id="@+id/textView_forgetPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_25"
        android:text="@string/forget_password"
        android:textColor="#005fe6"
        android:textSize="@dimen/sp_16"
        android:visibility="gone" />


    <Button
        android:id="@+id/btn_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginRight="@dimen/dimen_25"
        android:background="@drawable/login_btn_bg"
        android:text="确认登录"
        android:textColor="@color/diy_white"
        android:textSize="@dimen/sp_18" />

    <Button
        android:id="@+id/btn_regist"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginRight="@dimen/dimen_25"
        android:layout_marginTop="10dp"
        android:background="@drawable/reg_btn_bg"
        android:text="马上注册"
        android:textColor="@color/diy_white"
        android:textSize="@dimen/sp_18" />


</LinearLayout>